From 32181997263fbc0135033fd7f4b6c62ed44b90af Mon Sep 17 00:00:00 2001
From: "muhammed.asif" <muhammed.asif@dicortech.com>
Date: Tue, 30 Jan 2024 15:47:26 +0530
Subject: [PATCH] added support for i2c gp with eeprom-rtc

---
 .../boot/dts/freescale/imx8qxp-agility.dtsi   | 28 +++++++++++++++++++
 1 file changed, 28 insertions(+)

diff --git a/arch/arm64/boot/dts/freescale/imx8qxp-agility.dtsi b/arch/arm64/boot/dts/freescale/imx8qxp-agility.dtsi
index 6f6a23815..a78844039 100644
--- a/arch/arm64/boot/dts/freescale/imx8qxp-agility.dtsi
+++ b/arch/arm64/boot/dts/freescale/imx8qxp-agility.dtsi
@@ -327,6 +327,26 @@ &usbotg1 {
         status = "okay";
 };
 
+&i2c0 {
+        clock-frequency = <100000>;
+        pinctrl-names = "default";
+        pinctrl-0 = <&pinctrl_i2c0>;
+        #address-cells = <1>;
+		#size-cells = <0>;
+		status = "okay";
+				
+		rx8025:rtc@32 {
+                compatible = "epson,rx8025";
+                reg = <0x32>;
+        };
+ 
+        st24c02:eeprom@50 {
+                compatible = "atmel,24c02";
+                reg = <0x50>;
+                pagesize = <16>;
+        };		
+};
+
 &usbotg3 {
 	status = "okay";
 };
@@ -616,4 +636,12 @@ IMX8QXP_ENET0_RGMII_RXD3_CONN_ENET0_RGMII_RXD3		0x61
 		>;
 	};
 
+	pinctrl_i2c0: i2c0grp {
+		fsl,pins = <
+			IMX8QXP_MIPI_CSI0_GPIO0_00_ADMA_I2C0_SCL	0x06000021
+			IMX8QXP_MIPI_CSI0_GPIO0_01_ADMA_I2C0_SDA	0x06000021
+		>;
+	};
+
+
 };
